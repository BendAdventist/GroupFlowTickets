@page "/CreateEvent"

@inject IDbContextFactory<ApplicationDbContext> DbContextFactory
@inject EventManager EventManager

<h3>CreateEvent</h3>

<MudButton OnClick="CreateNewEvent">Create Test Event</MudButton>

@code {
    private static int _testNumber = 0;

    private Models.Event GenerateTestEvent() => new()
    {
        StartDateTime = DateTime.UtcNow + TimeSpan.FromDays(1),
        Name = $"Test #{++_testNumber}",
    };

    private void CreateNewEvent()
    {
        var newEvent = GenerateTestEvent();

        EventManager.Create(newEvent);
    }
}